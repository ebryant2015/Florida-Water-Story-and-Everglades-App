<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="#0D47A1"
   android:gravity="center"
   android:padding="30dip"
    android:weightSum="1"
    android:id="@+id/ok">

    <Button
      android:id="@+id/information"
      android:layout_width="260dp"
      android:layout_height="50dp"
      android:text="@string/information"
       android:background="#0D47A1"
       android:height="35dp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:layout_marginTop="500dp"
        android:layout_alignLeft="@+id/games" />
   <Button
      android:id="@+id/games"
      android:layout_width="260dp"
      android:layout_height="50dp"
      android:text="@string/games"
       android:height="35dp"
       android:background="#0D47A1"
       android:textColor="#fff"
       android:textStyle="normal"
       android:typeface="serif"
       android:textSize="30sp"
       android:layout_below="@+id/information"
       android:layout_alignLeft="@+id/map"
       android:layout_marginTop="50dp" />
   <Button
      android:id="@+id/map"
      android:layout_width="260dp"
      android:layout_height="50dp"
      android:text="@string/map"
       android:height="35dp"
       android:background="#0D47A1"
       android:textColor="#fff"
       android:textSize="30sp"
       android:textStyle="normal"
       android:typeface="serif"
       android:layout_marginTop="50dp"
       android:layout_below="@+id/games"
       android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/thanks"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/museum" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shell" />


</RelativeLayout><!-- From: file:/Users/Erika/Desktop/MODSApp/app/src/main/res/layout/main.xml -->